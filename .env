# .env.example - Copy to .env and fill in your values

# Stripe Configuration (Required for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# SendGrid Email Configuration (Optional)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=noreply@yourcoffee.com

# Application Configuration
APP_ENV=development
APP_DEBUG=true
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_make_it_at_least_32_characters

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# External API Configurations (add as needed)
USPS_API_KEY=your_usps_api_key
SHIPSTATION_API_KEY=your_shipstation_api_key
SHIPSTATION_API_SECRET=your_shipstation_secret

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
