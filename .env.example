# Environment Configuration
ENV=dev
LOG_LEVEL=info # info, debug, warn, error

# Server (main app)
PORT=3000
BASE_URL=http://localhost:3000
FREYJA_ADMIN_EMAIL=
FREYJA_ADMIN_PASSWORD=
ENCRYPTION_KEY=

# Server (SaaS marketing site - cmd/saas)
SAAS_PORT=3001

# Domain Configuration (for production multi-tenant routing)
# Set HOST_ROUTING_ENABLED=true to enable subdomain-based tenant routing
HOST_ROUTING_ENABLED=false
# Base domain for subdomain routing (e.g., "hiri.coffee")
# Marketing site serves at apex, tenants at {slug}.BASE_DOMAIN
BASE_DOMAIN=
# App domain for admin dashboard and operator auth (e.g., "app.hiri.coffee")
APP_DOMAIN=

# Database
DATABASE_URL=postgres://freyja:password@localhost:5432/freyja?sslmode=disable

# Tenant (hardcoded for MVP development)
TENANT_ID=00000000-0000-0000-0000-000000000001

# Session
SESSION_SECRET=dev-secret-change-in-production

# Stripe (get from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe SaaS Subscription (for tenant signup)
# Create a Product + Price in Stripe for the $149/month subscription
STRIPE_SAAS_PRICE_ID=price_your_saas_price_id
# Create a separate webhook endpoint for /webhooks/stripe/saas
STRIPE_SAAS_WEBHOOK_SECRET=whsec_your_saas_webhook_secret

# Email - SMTP (for local dev with Mailhog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@freyja.local
EMAIL_FROM_NAME=Freyja Coffee

# Email - Postmark (for production, leave empty to use SMTP)
POSTMARK_API_TOKEN=

# Shipping - EasyPost (https://www.easypost.com/docs/api)
EASYPOST_API_KEY=

# Storage Configuration
# Provider: "local" (development) or "r2" (production)
STORAGE_PROVIDER=local

# Local Storage Configuration (used when STORAGE_PROVIDER=local)
LOCAL_STORAGE_PATH=./web/static/uploads
LOCAL_STORAGE_URL=/uploads

# Cloudflare R2 Configuration (required when STORAGE_PROVIDER=r2)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_PUBLIC_URL=
