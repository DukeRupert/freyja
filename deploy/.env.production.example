# Hiri Production Environment Variables
# Copy this to .env on your VPS in /opt/freyja/

# Database
POSTGRES_PASSWORD=your-secure-database-password-here

# Application
SESSION_SECRET=your-secure-session-secret-min-32-chars

# Host-based routing (marketing site at root, app at subdomain)
HOST_ROUTING_ENABLED=true
MARKETING_DOMAIN=hiri.coffee
APP_DOMAIN=app.hiri.coffee

# Hetzner DNS (for Caddy TLS wildcard certs)
HETZNER_DNS_API_TOKEN=your-hetzner-dns-api-token

# Stripe (use live keys for production)
STRIPE_SECRET_KEY=sk_live_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email (configure your email provider)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@hiri.coffee
